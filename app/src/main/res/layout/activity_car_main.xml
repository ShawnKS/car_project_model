<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shawn.car_project.CarMainActivity"
    android:orientation="vertical"
    android:background="@drawable/tecc">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="220dp"
        android:text="端口号："
        android:textColor="#FFFFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="19dp"
        android:layout_y="174dp"
        android:text="连接地址："
        android:textColor="#FFFFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="126dp"
        android:textColor="#FFFFFFFF"
        android:text="视频流地址："
        android:textSize="20dp" />

    <EditText
        android:id="@+id/controlIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_x="132dp"
        android:layout_y="166dp"
        android:ems="10"
        android:textColor="#FFFFFFFF"
        android:inputType="textPersonName"
        android:text="192.168.1.1" />

    <EditText
        android:id="@+id/cameraIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_x="132dp"
        android:textColor="#FFFFFFFF"
        android:layout_y="119dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="http://192.168.1.1:8080/?action=stream" />

    <EditText
        android:id="@+id/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_x="132dp"
        android:layout_y="212dp"
        android:ems="10"
        android:textColor="#FFFFFFFF"
        android:inputType="textPersonName"
        android:text="2001" />

    <Button
        android:id="@+id/button"
        android:layout_width="166dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_x="108dp"
        android:layout_y="272dp"
        android:background="#2222"
        android:text="运行" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="62dp"
        android:layout_y="48dp"
        android:text="智能小车安卓操作端"
        android:textColor="#FFFFFFFF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="121dp"
        android:layout_y="462dp"
        android:text="made by team Vantasy" />

</AbsoluteLayout>
